# Core application configuration
BANK_BASE_URL=https://test-bank.example.com/login
EXCEL_PATH=data/sample_accounts.xlsx
HEADLESS=true
MAX_ACCOUNTS=0

# Output directories (relative to project root)
OUTPUT_DIR=outputs
SCREENSHOT_DIR=outputs/screenshots
STATEMENT_DIR=outputs/statements
RESULTS_CSV=outputs/run_results.csv
LOG_FILE=outputs/automation.log

# Shared mailbox (IMAP) settings
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USERNAME=shared-mailbox@example.com
IMAP_PASSWORD=replace-me
IMAP_FOLDER=INBOX
IMAP_SENDER_FILTER=no-reply@bank.example.com
IMAP_OTP_REGEX=\\b(\\d{6})\\b
IMAP_POLL_TIMEOUT=90
IMAP_POLL_INTERVAL=5

# Browser + download behaviour
DOWNLOAD_WAIT_SECONDS=30
DEFAULT_VIEWPORT_WIDTH=1280
DEFAULT_VIEWPORT_HEIGHT=720

# Logging
LOG_LEVEL=INFO
